	@Override
	public void inputCoin(vendingmachine.model.VendingMachine vendingMachine, int CoinCnt) {
		if (isPositiveNum(CoinCnt)) {
			vendingMachine.addCoin2VendingMachine(CoinCnt);
		}
	}

	private boolean isPositiveNum(int num) {
		if (num >= 0) {
			return true;
		} else {
			return false;
		}
	}

